<h1> All Horses at Rocky Hill </h1>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Horse</th>
        <th>Owner</th>
        <th>Profile</th>
      </tr>
    </thead>

    <tbody>
      <% @horses.each do |horse| %>
        <tr>
          <td><%= horse[:name]%></td>
          <td><%= horse.user.email.split("@")[0].capitalize %></td>
          <td>
            <button><%= link_to "View Profile", horse %> </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>